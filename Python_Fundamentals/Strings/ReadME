"""
var = "algoexpert".upper().replace("o", "i").capitalize().lower().split("e")
print(var)
print("foo".join(var))

"algoexpert".upper() = "ALGOEXPERT"

"ALGOEXPERT".replace("o", "i") = "ALGOEXPERT"
"ALGOEXPERT".capitalize() = "Algoexpert"
Algoexpert.lower() = "algoexpert"

"algoexpert".split("e")

var = ["algo", "xp", "rt"]
"foo".join(var) = algofooxpfoort


